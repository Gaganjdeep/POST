<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:centerColor="#99fc0303"
                android:endColor="#00ffffff"
                android:gradientRadius="500dp"
                android:startColor="#99fc0303"
                android:angle="90"
                android:type="radial"> <!-- Change this value to have the correct shadow angle, must be multiple from 45 -->
            </gradient>
        </shape>
    </item>


    <item
        android:bottom="2dp"
        android:drawable="@drawable/grey_black_gradient"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">


    </item>


</layer-list>